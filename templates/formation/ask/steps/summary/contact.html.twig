<div class="col-12 col-md-6">
    <div>
        <i class="fas fa-user form-icon"></i>
    </div>
    <div class="py-3 d-flex align-items-end justify-content-between">
        <div>
            <div class="row pt-2">
                <div class="fw-bold">
                    {{ ask.firstName }} {{ ask.lastName }}
                </div>
                {% if ask.email is defined and ask.email != "" %}
                    <div class="d-flex">
                        <div class="pe-2">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            {{ ask.email }}
                        </div>
                    </div>
                {% endif %}

                {% if ask.phoneNumber is defined and ask.phoneNumber != "" %}
                    <div class="d-flex">
                        <div class="pe-2">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div>
                            {{ ask.phoneNumber }}
                        </div>
                    </div>
                {% endif %}

                {% if ask.address is defined and ask.address != "" %}
                    <div class="d-flex">
                        <div class="pe-2">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div>
                            <div>
                                {{ ask.address }}
                            </div>
                            {% if ask.postalCode is defined %}
                                <div>
                                    {{ ask.postalCode }}
                                    {% if ask.city is defined %}
                                        {{ ask.city }}
                                    {% endif %}
                                </div>
                            {% endif %}
                            {% if ask.country is defined %}
                                <div>
                                    {{ ask.country }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

                {% if ask.dateOfBirth is defined and ask.dateOfBirth != "" %}
                    <div class="d-flex">
                        <div class="pe-2">
                            <i class="fas fa-birthday-cake"></i>
                        </div>
                        <div>
                            {{ ask.dateOfBirth|date("d/m/Y") }}
                        </div>
                    </div>
                {% endif %}

                {% if ask.placeOfBirth is defined and ask.placeOfBirth != "" %}
                    <div class="d-flex">
                        <div class="pe-2">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div>
                            {{ ask.placeOfBirth }}
                        </div>
                    </div>
                {% endif %}
            </div>
            <div class="d-flex">
                <div>
                    <span class="fw-bold">Situation de handicap :</span>
                    {% if ask.handicap == null %}
                        Non
                    {% else %}
                        Oui
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="text-end">
            <a class="btn btn-success rounded-corners" href='/demande-de-formation?instance={{ instance }}&step=3'>
                <i class="fas fa-pen"></i>
            </a>
        </div>
    </div>
</div>