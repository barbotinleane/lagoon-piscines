{{ form_start(form) }}
    <div class="row py-2">
        {{ form_row(form.title) }}
        {{ form_row(form.date) }}
    </div>

    <div class="row py-2">
        {{ form_row(form.content) }}
    </div>

    <div class="row py-2">
        <div>
            {{ form_label(form.image) }}
        </div>
        {% if form.vars.data.imageName %}
            <img src="{{ asset('uploads/images/news/' ~ news.imageName) }}" class="w-75 mx-auto">
        {% endif %}
        <div>
            {{ form_errors(form.image) }}
        </div>
        <div class="pt-2">
            {{ form_widget(form.image) }}
        </div>
    </div>

    <div class="pt-4 text-center">
        <button class="btn btn-lg btn-success">
            <i class="fa fa-check"></i>
            {{ button_label|default('Valider') }}
        </button>
    </div>
{{ form_end(form) }}
