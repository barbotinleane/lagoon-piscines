<div>
    <div class="row p-4 my-3 bg-form-blue">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="baskerville size-3">Mon statut</h3>
            <div>
                <i class="fas fa-briefcase form-icon"></i>
            </div>
        </div>
        <div class="col-12 col-sm-6">
            <h4>Statut</h4>
            {{ ask.status }}
        </div>
        <div class="col-12 col-sm-6">
            <h5>Objectif</h5>
            {{ ask.goal }}
        </div>
    </div>

    <div class="row p-4 my-3 bg-yellow-clear">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="baskerville size-3">Ma formation</h3>
            <div>
                <i class="fas fa-chalkboard-teacher form-icon"></i>
            </div>
        </div>
        <div class="col-12 col-sm-6">
            <h5>Formation demandée</h5>
            {{ ask.formationLibelle }}
        </div>
        <div class="col-12 col-sm-6">
            <h5>Session</h5>
            {{ ask.formationSession.date }}
        </div>
        <a class="btn-success" href='/demande-de-formation?instance={{ instance }}&step=2'>
            <i class="fas fa-pen"></i>
            Modifier
        </a>
    </div>

    <div class="row p-4 my-3 bg-form-blue">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="baskerville size-3">Mes coordonnées</h3>
            <div>
                <i class="fas fa-user form-icon"></i>
            </div>
        </div>
        <div class="col-12 col-sm-6">
            <h5>Prénom</h5>
            {{ ask.firstName }}
        </div>
        <div class="col-12 col-sm-6">
            <h5>Nom</h5>
            {{ ask.lastName }}
        </div>
        <div class="row">
            <div class="col-12 col-sm-6">
                <h5>Email</h5>
                {{ ask.email }}
            </div>
            <div class="col-12 col-sm-6">
                <h5>Téléphone</h5>
                {{ ask.phoneNumber }}
            </div>
        </div>
        <div class="col-12 col-sm-10 col-md-8">
            <h5>Adresse</h5>
            {{ ask.address }}
        </div>
        <div class="row">
            <div class="col-6 col-sm-4">
                <h5>Code Postal</h5>
                {{ ask.postalCode }}
            </div>
            <div class="col-6 col-sm-4">
                <h5>Ville</h5>
                {{ ask.city }}
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-4">
                <h5>Département</h5>
                {{ ask.department }}
            </div>
            <div class="col-12 col-sm-4">
                <h5>Pays</h5>
                {{ ask.country }}
            </div>
        </div>
        <div class="col-12 col-sm-4">
            <h5>Situation de handicap</h5>
            {% if ask.handicap == null %}
                Non
            {% else %}
                Oui
            {% endif %}
        </div>
        <a class="btn-success" href='/demande-de-formation?instance={{ instance }}&step=3'>
            <i class="fas fa-pen"></i>
            Modifier
        </a>
    </div>

    {% if ask.isStagiaireMultiple == true %}
        <div class="row p-4 my-3 bg-yellow-clear">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="baskerville size-3">Les stagiaires</h3>
            </div>
            <ul class="stagiaires row ps-0 g-2">
                {% for stagiaire in ask.stagiaires %}
                    <li class="bg-blue col-12 col-sm-6 col-md-4 shadow-lg p-4">
                        <h4>STAGIAIRE</h4>
                        <div class="col-12 col-sm-6">
                            <h5>Prénom</h5>
                            {{ stagiaire.firstName }}
                        </div>
                        <div class="col-12 col-sm-6">
                            <h5>Nom</h5>
                            {{ stagiaire.lastName }}
                        </div>
                        <div class="row">
                            <div class="col-12 col-sm-6">
                                <h5>Email</h5>
                                {{ stagiaire.email }}
                            </div>
                            <div class="col-12 col-sm-6">
                                <h5>Téléphone</h5>
                                {{ stagiaire.phoneNumber }}
                            </div>
                        </div>
                        {% if stagiaire.currentJob != null %}
                            <div class="col-12 col-sm-6">
                                <h5>Poste occupé</h5>
                                {{ stagiaire.currentJob }}
                            </div>
                        {% endif %}
                        <div class="col-12 col-sm-4">
                            <h5>Situation de handicap</h5>
                            {% if ask.handicap == null %}
                                Non
                            {% else %}
                                Oui
                            {% endif %}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div class="p-4 my-3 bg-form-blue">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="baskerville size-3">Pré-requis : </h3>
            <div>
                <i class="fas fa-tools form-icon"></i>
            </div>
        </div>

        {% for key, prerequisite in prerequisites %}
            {{ key }} : {{ prerequisite }}
        {% endfor %}
    </div>
</div>