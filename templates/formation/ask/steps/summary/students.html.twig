<hr>

<div class="row my-3">
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="size-3">
            Les stagiaires
        </h4>
    </div>
    <div class="stagiaires row ps-0 g-2" style="list-style-type: none;">
        {% for stagiaire in ask.stagiaires %}
            <div class="col-12 col-sm-6 col-lg-4">
                 <div class="bg-grey justify-content-between rounded-corners mx-2 py-3 mb-3 text-center">
                    <i class="fas fa-user size-1"></i>
                    <div class="pt-4 fw-bold">
                        {% if stagiaire.handicap != null %}
                            <i class="fa-solid fa-wheelchair"></i>
                        {% endif %}
                        {{ stagiaire.firstName }} {{ stagiaire.lastName }}
                    </div>
                 </div>
            </div>
        {% endfor %}
    </div>

    <div class="text-end">
        <a class="btn btn-success rounded-corners" href='/demande-de-formation?instance={{ instance }}&step=5'>
            <i class="fas fa-pen"></i>
        </a>
    </div>
</div>

<hr>