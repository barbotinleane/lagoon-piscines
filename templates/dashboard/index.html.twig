{% extends 'base.html.twig' %}

{% block title %}LAGOON&reg; Piscines - Administration{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="container-fluid">
            <div class="section d-flex flex-row justify-content-between">
                <h1 class="text-roboto-bold">Administration</h1>
                <div>
                    <a class="btn btn-dark" href="{{ path('app_logout') }}">
                        <i class="fa fa-sign-out"></i>
                        Se déconnecter
                    </a>
                </div>
            </div>
            <div class="row section">
                <h2 class="text-center py-3 text-roboto-bold">Les sessions de formation</h2>
                <table class="table">
                    <thead>
                    <tr>
                        <th><strong>Formation</strong></th>
                        <th>Date de début</th>
                        <th>Date de fin</th>
                        <th>Inscrits</th>
                        <th>Capacité</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for formation_session in formation_sessions %}
                        <tr>
                            <td>{{ formation_session.formation.libelle }}</td>
                            <td>{{ formation_session.dateStart ? formation_session.dateStart|date('d/m/Y') : '' }}</td>
                            <td>{{ formation_session.dateEnd ? formation_session.dateEnd|date('d/m/Y') : '' }}</td>
                            <td>{{ formation_session.registered }}</td>
                            <td>{{ formation_session.capacity }}</td>
                            <td>
                                <a class="btn btn-success"
                                   href="{{ path('app_dashboard_show', {'id': formation_session.id}) }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a class="btn btn-danger"
                                   href="{{ path('app_dashboard_edit', {'id': formation_session.id}) }}">
                                    <i class="fa fa-pen"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="text-center">
                    <a class="btn btn-lg btn-secondary" href="{{ path('app_dashboard_new') }}">
                        <i class="fa fa-plus"></i>
                        Ajouter une session
                    </a>
                </div>
            </div>

            <div class="row section">
                <div class="text-end">
                    <a class="btn btn-dark" href="{{ path('app_logout') }}">
                        <i class="fa fa-sign-out"></i>
                        Se déconnecter
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <p>Vous n'avez pas accès à cette page.</p>
        <div class="text-center">
            <a class="btn btn-blue" href="{{ path('app_home') }}">
                Retour à la page d'accueil
            </a>
        </div>
    {% endif %}
{% endblock %}
