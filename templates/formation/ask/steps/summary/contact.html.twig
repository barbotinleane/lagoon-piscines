<div class="col-12 col-md-6">
    <div>
        <i class="fas fa-user form-icon"></i>
    </div>
    <div class="py-3 d-flex align-items-end justify-content-between">
        <div>
            <div class="row pt-2">
                <div>
                    {{ ask.firstName }} {{ ask.lastName }}
                </div>
                <div class="d-flex">
                    <div class="pe-2">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div>
                        {{ ask.email }}
                    </div>
                </div>
                <div class="d-flex">
                    <div class="pe-2">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div>
                        {{ ask.phoneNumber }}
                    </div>
                </div>
                <div class="d-flex">
                    <div class="pe-2">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div>
                        <div>
                            {{ ask.address }}
                        </div>
                        <div>
                            {{ ask.postalCode }} {{ ask.city }}
                        </div>
                        <div>
                            {{ ask.country }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="ps-4">
                Handicap :
                {% if ask.handicap == null %}
                    Non
                {% else %}
                    Oui
                {% endif %}
            </div>
        </div>

        <div class="text-end">
            <a class="btn btn-success rounded-corners" href='/demande-de-formation?instance={{ instance }}&step=3'>
                <i class="fas fa-pen"></i>
            </a>
        </div>
    </div>
</div>