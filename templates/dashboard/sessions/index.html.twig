{% extends 'dashboard/index.html.twig' %}

{% block dashboardBody %}
    <div class="row section">
        <h2 class="text-center py-3">Sessions de formation</h2>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th><strong>Formation</strong></th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Inscrits</th>
                    <th>Capacité</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for formation_session in formation_sessions %}
                    <tr class='clickable-row' data-href='{{ path('app_sessions_edit', {'id': formation_session.id}) }}'>
                        <td>{{ formation_session.formation.libelle }}</td>
                        <td>{{ formation_session.dateStart ? formation_session.dateStart|date('d/m/Y') : '' }}</td>
                        <td>{{ formation_session.dateEnd ? formation_session.dateEnd|date('d/m/Y') : '' }}</td>
                        <td>{{ formation_session.registered }}</td>
                        <td>{{ formation_session.capacity }}</td>
                        <td>
                            <a href="{{ path('app_sessions_edit', {'id': formation_session.id}) }}"
                               class="btn btn-success"
                            >
                                <i class="fa fa-pen"></i>
                                Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Pas de sessions de formations enregistrées</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <a class="btn btn-lg btn-blue" href="{{ path('app_sessions_new') }}">
                <i class="fa fa-plus"></i>
                Ajouter une session
            </a>
        </div>
    </div>
{% endblock %}
